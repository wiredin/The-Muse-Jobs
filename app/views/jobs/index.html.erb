<h1>The Muse Jobs</h1>

<div class="filters">
<div class="row">
  <div class="col-md-1"><strong>Category:</strong></div>
  <div class="col-md-11">
  <% categories_list.each do |c| %>
    <%= link_to c, jobs_path(category_params c), class: category_class(c) %>
  <% end %> 
  </div>
</div>

<div class="row">
  <div class="col-md-1"><strong>Location:</strong></div>
  <div class="col-md-11">
<%= select_tag "location", options_for_select(location_links, selected: jobs_path({page: @page, level: @levels, category: @categories, location: @location, company: @company})), class: "form-control", onchange: "location = this.value;" %>
  </div>
</div>
<div class="row">
  <div class="col-md-1"><strong>Level:</strong></div>
  <div class="col-md-11">
  <% experience_list.each do |l| %>
    <%= link_to l, jobs_path(level_params l), class: level_class(l) %>
  <% end %> 
  </div>
</div>
</div>


<ul class="list-unstyled job-list">
<% @jobs.each do |job| %>
  <li class="job-item">
    <span class="company"> <%= link_to job["company"]["name"], jobs_path(page: 1, level: @levels, category: @categories, location: @location, company: job["company"]["name"]) %></span>
    <span class="job-name"><a href="<%=job["refs"]["landing_page"] %>"><%= job["name"] %></a></span>
  </li>
<% end %>
</ul>


<nav aria-label="Page navigation">
  <ul class="pagination">
  <% display_pages.each do |p| %>
    <li <%= 'class=active' if p == @page  %>>
      <%= link_to p, jobs_path(page: p, level: @levels, category: @categories, location: @location, company: @company) %> 
    </li>
  <% end %>
  </ul>
</nav>
